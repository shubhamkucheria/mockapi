linkCount
var anchors = document.getElementsByTagName('a');
var hrefs = [];
for(var i=0; i < anchors.length; i++){
  if(1/* add filtering here*/)
    hrefs.push(anchors[i].href);
}
hrefs = hrefs.filter(arrayItem => !arrayItem.startsWith('javascript:'));
console.log(hrefs);



articles on the page
document.getElementsByClassName("list-container cf")[2].getElementsByTagName("li").length;///
/////
javascript:(function(){
var listCount = document.getElementsByClassName("list-container cf").length;
var articleCount  = 0;

for(i=0; i< listCount; i++) {
var tempCount = document.getElementsByClassName("list-container cf")[i].getElementsByTagName("li").length;
articleCount = articleCount + tempCount;

}
console.log('3. total ARTICLE', articleCount);
})();

